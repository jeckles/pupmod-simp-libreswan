# This should act as the template for the template for the configuration file 
# located in the host's /etc/ipsec.d directory
conn private-or-clear
	type = tunnel
     <% if @left then -%>
	left = <%= @left %>
     <% end -%>
     <% if @leftid then -%>
	leftid = <%= @leftid %>
     <% end -%>
	right = %opportunisticgroup
     <% if @rightid then -%>
	rightid = <%= @rightid %>
     <% end -%>
     <% if @rightca then -%>
	rightca = <%= @rightca %>
     <% end -%>
     <% if @ikev2 then -%>
	ikev2 = <%= @ikev2 %>
     <% end -%>
     <% if @narrowing then -%>
	narrowing = <%= @narrowing %>
     <% end -%>
     <% if @leftauth then -%>
	leftauth = <%= @leftauth %>
     <% end -%>
     <% if @rightauth then -%>
	rightauth = <%= @rightauth %>
     <% end -%>
     <% if @negotiationshunt then -%>
	negotiationshunt = <%= @negotiationshunt %>
     <% end -%>
     <% if @failureshunt then -%>
	failureshunt = <%= @failureshunt %>
     <% end -%>
     <% if @keyingtries then -%>
	keyingtries = <%= @keyingtries %>
     <% end -%>
     <% if @rekey then -%>
	rekey = <%= @rekey %>
     <% end -%>
     <% if @auto then -%>
	auto = <%= @auto %>
     <% end -%>
